<mvc:View
    controllerName="tax.provisioning.computations.controller.Riprese"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
        showFooter="true"
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<actions>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

        <headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<m:HBox class="sapUiMediumMarginTop">
                    <m:VBox class="sapUiSmallMarginBottom" renderType="Bare">
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <m:Label text="{i18n>CodiceRipresa}: " class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <m:Label text="{i18n>DescrizioneRipresa}: " class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <m:Label text="{i18n>RiferimentiNormativi}: " class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <m:Label text="{i18n>RiferimentoDichiarazione}: " class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <m:Label text="{i18n>Imposta}: " class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <m:Label text="{i18n>Algoritmo}: " class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                    </m:VBox>
                    <m:VBox class="sapUiSmallMarginBottom" renderType="Bare">
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <m:Text text="{oModelAnagraficaSingolaTestata>/oModel2/ID}" class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <m:Text text="{oModelAnagraficaSingolaTestata>/oModel2/descrizioneRipresa}" class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <m:Text text="{oModelAnagraficaSingolaTestata>/oModel2/riferimentoNormativo}" class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <m:Text text="{oModelAnagraficaSingolaTestata>/oModel2/riferimentoDichiarazione}" class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <m:Text text="{oModelAnagraficaSingola>/oModel1/imposta}" class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                             <m:Text text="{oModelAnagraficaSingolaTestata>/oModel2/configurazioni/results/0/algoritmo}" class="sapUiMediumMarginEnd"/>
                        </m:HBox>
                    </m:VBox>
                </m:HBox>
			</m:FlexBox>
		</headerContent>

        <sections>
			<ObjectPageSection visible="true">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
                            <m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
                                <m:HBox class="sapUiMediumMarginTop">
                                    <m:VBox class="sapUiSmallMarginBottom" renderType="Bare">
                                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                                            <m:Label text="{i18n>PercentualeStandard}: " class="sapUiMediumMarginEnd"/>
                                        </m:HBox>
                                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                                            <m:Label text="{i18n>TotaleCostiSelezionati}: " class="sapUiMediumMarginEnd"/>
                                        </m:HBox>
                                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                                            <m:Label text="{i18n>TotaleRipresa}: " class="sapUiMediumMarginEnd"/>
                                        </m:HBox>
                                    </m:VBox>
                                    <m:VBox class="sapUiSmallMarginBottom" renderType="Bare">
                                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                                            <m:Text text="{oModelAnagraficaSingola>/oModel/ID}" class="sapUiMediumMarginEnd"/>
                                        </m:HBox>
                                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                                            <m:Text text="{oModelAnagraficaSingola>/oModel/descrizioneRipresa}" class="sapUiMediumMarginEnd"/>
                                        </m:HBox>
                                        <m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
                                            <m:Text text="{oModelAnagraficaSingola>/oModel/descrizioneRipresa}" class="sapUiMediumMarginEnd"/>
                                        </m:HBox>
                                    </m:VBox>
                                </m:HBox>
                            </m:FlexBox>	
						 </blocks>
					</ObjectPageSubSection>
				</subSections>
                <subSections>
					<ObjectPageSubSection>
                        <blocks>
                            <m:Table
								id="percentualeTable"
								mode="SingleSelectMaster"
                                autoPopinMode="false"
								itemPress="handleItemPress"
								items="{path : 'oModelAnagraficaSingola>/oModel1/versione/items'}">
								<m:columns>
									<m:Column>
                                        <m:Text text="Codice GL"/>
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Descrizione GL"/>
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Classificazione"/>
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Importo LY"/>
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Importo CY"/>
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Percentuale"/>
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Ripresa automatica"/>
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Ripresa manuale"/>
                                    </m:Column>
                                     <m:Column>
                                        <m:Text text="Drill"/>
                                    </m:Column>
                                     <m:Column>
                                        <m:Text text="Totale ripresa"/>
                                    </m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											<m:Text text="{oModelAnagraficaSingola>codiceGL}" />
                                            <m:Text text="{oModelAnagraficaSingola>descrizioneGL}" />
                                            <m:Text text="{oModelAnagraficaSingola>classificazione}" />
                                            <m:Text text="{oModelAnagraficaSingola>importoLY}" />
                                            <m:Text text="{oModelAnagraficaSingola>importoCY}" />
                                            <m:Text text="{oModelAnagraficaSingola>algoritmi/results/0/percentuale}" />
                                            <m:Text text="{oModelAnagraficaSingola>drill}" />
                                            <m:Text text="{oModelAnagraficaSingola>totale}" />
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
                        </blocks>
					</ObjectPageSubSection>
                </subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>