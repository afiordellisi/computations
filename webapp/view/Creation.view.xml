                                        <smartForm:ColumnLayout 
                                            emptyCellsLarge="4"
                                            labelCellsLarge="4"
                                            columnsM="1"
                                            columnsL="1"
                                            columnsXL="1"/>
                                    </smartForm:layout>
                                    <smartForm:Group>
                                        <smartForm:GroupElement >
                                            <smartField:controlConfiguration>
                                            <smartField:ControlConfiguration controlType="dropDownList" groupId="_BASIC2" key="societa" preventInitialDataFetchInValueHelpDialog="false" filterType="single" id="societa2"/>
                                            <smartField:SmartField entitySet="items" value="{societa}" id="idPrice"/> 
                                          </smartField:controlConfiguration> 
                                        </smartForm:GroupElement>
