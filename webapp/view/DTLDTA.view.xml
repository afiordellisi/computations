                <items>
                    <ColumnListItem press="onDetailPress"  class="cbVisibility">
                        <cells>
                            <Text text="{oModelDT>codiceRipresa}"/>
                            <Text text="{oModelDT>descrizioneRipresa}"/>
                            <Text text="{oModelDT>OpeningBalance}" editable="false"/>
                            <Text text="{oModelDT>PriorYearAdjustments}" editable="false"/>
                            <Text text="{oModelDT>extraordinaryTransactions}" editable="false"/>
                            <Text text="{oModelDT>CurrentYearAccrual}" editable="false"/>
                            <Text text="{oModelDT>CurrentYearUtilization}" editable="false"/>
                            <Text text="{oModelDT>otherAdjustments}" editable="false"/>
                            <Text text="{oModelDT>changeTaxRate}" editable="false"/>
                            <Text text="{oModelDT>closingGrossBalance}" editable="false"/>
                            <Text text="{oModelDT>devaluationOpening}" editable="false"/>
                            <Text text="{oModelDT>devaluationMovement}" editable="false"/>
