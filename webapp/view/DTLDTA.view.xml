            <ScrollContainer height="auto" vertical="false" focusable="true" >
            <content>
            <Table id="idProductsTable"
                    inset="false"
                    items="{path:'oModelDT>/oModel'}"
                    class="sapFSemanticPageAlignContent"
                    width="auto"
                    fixedLayout="false"
                    growing="true"
                    growingThreshold="50"
                    growingScrollToLoad="true"
                    sticky="ColumnHeaders">
                <columns>
                    <Column>
                        <Label text="{i18n>CodiceRipresa}"/>
                    </Column>
                    <Column>
                        <Label text="{i18n>DescrizioneRipresa}"/>
                    </Column>
                    <Column>
                        <Label text="{i18n>OpeningB}"/>
                        <footer>
                            <Text text="{oModelTotali>/totaleOB}"/>
                        </footer>
                    </Column>
                     <Column>
                        <Text text="{i18n>PriorYear}" />
                        <footer>
                            <Text text="{oModelTotali>/totalePRA}"/>
                        </footer>
                    </Column>
                    <Column>
                        <Text text="{i18n>Extraordinary}" />
