<mvc:View controllerName="tax.provisioning.computations.controller.DTLDTA"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:layout="sap.ui.layout"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <semantic:SemanticPage id="timeDiffPage" headerPinnable="true" headerExpanded="true" toggleHeaderOnTitleClick="true" preserveHeaderStateOnScroll="false" titleAreaShrinkRatio="1:1.6:1.6" showFooter="true">

        <semantic:titleHeading>
            <ObjectAttribute title="{i18n>imposta}" text="{oModelTestata>/imposta}"/>
        </semantic:titleHeading>

        <semantic:content>
            <t:Table rows="{path:'oModelDT>/oModel'}" selectionMode="None" fixedColumnCount="2" fixedBottomRowCount="1" enableColumnReordering="false">
                <t:columns>
                    <t:Column width="11rem" resizable="false">
                        <Label text="{i18n>CodiceRipresa}" />
                        <t:template>
                            <Text text="{oModelDT>codiceRipresa}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem">
                        <Label text="{i18n>DescrizioneRipresa}" />
                        <t:template>
                            <Text text="{oModelDT>descrizioneRipresa}" textAlign="{= ${oModelDT>descrizioneRipresa} === 'Totale' ? 'End' : 'Begin'}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>OpeningB}" />
                        <t:template>
                            <Text text="{oModelDT>OpeningBalance}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>OpeningB}" />
                        <t:template>
                            <Text text="{oModelDT>OpeningBalance}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>PriorYear}" />
                        <t:template>
                            <Text text="{oModelDT>PriorYearAdjustments}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>Extraordinary}" />
                        <t:template>
                            <Text text="{oModelDT>extraordinaryTransactions}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>CurrYear}" />
                        <t:template>
                            <Text text="{oModelDT>CurrentYearAccrual}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>CurrYearUtili}" />
                        <t:template>
                            <Text text="{oModelDT>CurrentYearUtilization}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>OtherAdj}" />
                        <t:template>
                            <Text text="{oModelDT>otherAdjustments}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>changetax}" />
                        <t:template>
                            <Text text="{oModelDT>changeTaxRate}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>closingGB}" />
                        <t:template>
                            <Text text="{oModelDT>closingGrossBalance}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>devOpen}" />
                        <t:template>
                            <Text text="{oModelDT>devaluationOpening}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>devMov}" />
                        <t:template>
                            <Text text="{oModelDT>devaluationMovement}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>devClosing}" />
                        <t:template>
                            <Text text="{oModelDT>devaluationClosing}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>closNB}" />
                        <t:template>
                            <Text text="{oModelDT>closingNetBalance}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>movementPL}" />
                        <t:template>
                            <Text text="{oModelDT>movementPL}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>movementBS}" />
                        <t:template>
                            <Input type="Number" editable="{= ${oModelDT>descrizioneRipresa} === 'Totale'? false : true}" textAlign="End" value="{oModelDT>movementBS}"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>Current1}" />
                        <t:template>
                            <Text text="{oModelDT>current1}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>Current2}" />
                        <t:template>
                            <Text text="{oModelDT>current2}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>Current3}" />
                        <t:template>
                            <Text text="{oModelDT>current3}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="11rem" hAlign="End" resizable="false">
                        <Label text="{i18n>LongTerm}" />
                        <t:template>
                            <Text text="{oModelDT>current4}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </semantic:content>
        <semantic:footerCustomActions>
            <Button text="{i18n>save}" type="Accept"/>
        </semantic:footerCustomActions>
    </semantic:SemanticPage>
</mvc:View>
