<core:FragmentDefinition
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns="sap.suite.ui.commons">
    <m:Dialog
		title="{i18n>newCommento}"
        id="DialogSalva2">
	<m:Toolbar>
		<!-- <m:Button text="No paging" press="onNoPagingPress"/>
        <m:ToolbarSpacer/>
        <m:Button text="Nuovo commento" press="onNuovoCommento"/> -->
        <m:FeedInput
            post="onPost"
            showIcon="false" />



        <m:Label text="With Icon Placeholder" class="sapUiSmallMarginTop sapUiTinyMarginBottom" />
		<!-- <m:CheckBox text="Lazy loading" select="onLazyLoadingSelected" selected="true" id="idLazyLoading"/>
		<m:CheckBox text="Growing (10 items)" select="onGrowingSelected" selected="false" id="idGrowing"/>
		<m:Label text="Axis orientation"/>
		<m:Select change="orientationChanged">
			<core:Item key="Vertical" text="Vertical"/>
			<core:Item key="Horizontal" text="Horizontal"/>
		</m:Select>
		<m:CheckBox text="Scrollbar" select="onScrollbarSelected" selected="true"/> -->
	</m:Toolbar>
	<Timeline
			id="idTimeline"
			enableDoubleSided="true"
			groupBy="HireDate"
			growingThreshold="0"
			filterTitle="Job Title"
			sortOldestFirst="true"
			content="{modelloTimeline>/Employees}">
		<content>
			<TimelineItem
					id="idTemplateItem"
					dateTime="{HireDate}"
					title="{JobTitle}"
					userNameClickable="true"
					userNameClicked="onUserNameClick"
					select="onPressItems"
					userPicture="{Photo}"
					text="{JobResponsibilities}"
					userName="{Name}"
					filterValue="{JobTitle}"
					icon="{Icon}">
			</TimelineItem>
		</content>
	</Timeline>
    <m:beginButton >
    <m:Button text="{i18n>save}" press="onSaveAllegato" type="Emphasized"/>
    </m:beginButton >
    <m:endButton>
    <m:Button text="{i18n>cancel}" press="onClose"/>
    </m:endButton >
	</m:Dialog>
</core:FragmentDefinition>
