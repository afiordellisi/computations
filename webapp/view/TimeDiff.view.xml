<mvc:View controllerName="tax.provisioning.computations.controller.TimeDiff"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable" 
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <semantic:SemanticPage id="timeDiffPage" headerPinnable="true" headerExpanded="true" toggleHeaderOnTitleClick="true" preserveHeaderStateOnScroll="false" titleAreaShrinkRatio="1:1.6:1.6" showFooter="false">
        <semantic:headerContent>
            <layout:VerticalLayout class="sapUiMediumMarginEnd">
                <layout:HorizontalLayout class="sapUiSmallMarginTop" allowWrapping="true">
                    <layout:VerticalLayout class="sapUiMediumMarginEnd">  
                        <ObjectIdentifier text="{i18n>imposta}: " class="sapUiTinyMarginBottom" id="impostaTime"/> 
                        <ObjectIdentifier text="{i18n>Computazione}: " class="sapUiTinyMarginBottom" id="computazioneTime"/>
                    </layout:VerticalLayout>  
                    <layout:VerticalLayout> 
                        <ObjectNumber number="{oModelTestata>/imposta}" class="sapUiTinyMarginBottom"/>
                        <ObjectNumber number="{oModelTestata>/computationID}" class="sapUiTinyMarginBottom"/>
                    </layout:VerticalLayout>            
                </layout:HorizontalLayout>
            </layout:VerticalLayout>
        </semantic:headerContent>

        <semantic:content>
            <ScrollContainer height="auto" vertical="true" focusable="true">
                <content>
                    <Table id="idProductsTable"
                        inset="false"
                        items="{path:'oModelTiming>/oModel'}"
                        class="sapFDynamicPageAlignContent"
                        width="auto"
                        growing="true"
                        growingThreshold="50"
                        growingScrollToLoad="false"
                        fixedLayout="false">

                        <columns>
                            <Column>
                                <Text text="{i18n>CodiceDiff}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>DiffTemp}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>OpeningB}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>PriorYear}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>Extraordinary}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>CurrYear}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>CurrYearUtili}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>OtherAdj}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>ClosingB}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>Current1}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>Current2}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>Current3}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>LongTerm}" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{oModelTiming>codiceRipresa}"/>
                                    <Text text="{oModelTiming>descrizioneRipresa}"/>
                                    <Text text="{oModelTiming>OpeningBalance}"/>
                                    <Text text="{oModelTiming>PriorYearAdjustments}"/>
                                    <Input type="Number" editable="true" value="{oModelTiming>extraordinaryTransactions}"/>
                                    <Text text="{oModelTiming>CurrentYearAccrual}"/>
                                    <Text text="{oModelTiming>CurrentYearUtilization}"/>
                                    <Input type="Number" editable="true" value="{oModelTiming>otherAdjustments}"/>
                                    <Text text="{oModelTiming>closingBalance}"/>
                                    <Text text="{oModelTiming>current1}"/>
                                    <Input type="Number" editable="true" value="{oModelTiming>current2}"/>
                                    <Input type="Number" editable="true" value="{oModelTiming>current3}"/>
                                    <Input type="Number" editable="true" value="{oModelTiming>longTerm}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
            </ScrollContainer>


            <!-- <smartTable:SmartTable id="LineItemsSmartTable" 
                entitySet="TimingDifferencesViewSet"
                tableType="AnalyticalTable"
                xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
                beforeRebindTable="setTable" 
                useExportToExcel="true" 
                beforeExport="onBeforeExport" 
                useVariantManagement="false" 
                useTablePersonalisation="false" 
                showRowCount="false" 
                enableAutoBinding="true" 
                class="sapUiResponsiveContentPadding" 
                enableAutoColumnWidth="true" 
                initiallyVisibleFields="codiceRipresa,descrizioneRipresa"
                requestAtLeastFields="codiceRipresa,descrizioneRipresa">

			</smartTable:SmartTable> -->
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>
